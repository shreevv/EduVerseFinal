<%- include('partials/header') %>
<div id="page-content" style="padding: 4em 5%;">
    <div class="form-container">
        <div class="div-title" style="padding-top: 0;">
            <h2>Edit User</h2>
        </div>
        <!-- Form submits to '/update' route with the User's ID -->
        <form action="/update/<%= user._id %>" method="post">
            <div class="form-group">
                <label>Full Name</label>
                <!-- 'value' attribute pre-fills input with existing data -->
                <input type="text" name="name" value="<%= user.name %>" required>
            </div>
            <div class="form-group">
                <label>Email Address</label>
                <input type="email" name="email" value="<%= user.email %>" required>
            </div>
            <div class="form-group">
                <label>Profile Image URL</label>
                <input type="text" name="image" value="<%= user.image %>">
            </div>
            <input type="submit" value="Update User" class="button-primary" style="width: 100%;">
        </form>
    </div>
</div>
<%- include('partials/footer') %>